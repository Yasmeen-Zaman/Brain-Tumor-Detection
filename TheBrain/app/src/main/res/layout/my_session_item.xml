<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        app:background="@color/material_on_primary_emphasis_high_type">

        <TextView
            android:id="@+id/session_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/custom_color_secondary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/prediction_tag"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/custom_color_primary"
            android:textStyle="normal"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_marginStart="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/session_date"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/custom_color_primary"
        android:textStyle="normal"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        app:background="@color/material_on_primary_emphasis_high_type"
        android:layout_marginStart="5dp" />


</LinearLayout>